<!--
	Adapted by Peter Kuterna to support the Devoxx conference.
-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:devoxx="http://schemas.android.com/apk/res/net.peterkuterna.android.apps.devoxxsched"
    android:id="@+id/blocks_scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <view
        class="net.peterkuterna.android.apps.devoxxsched.ui.widget.BlocksLayout"
        android:id="@+id/blocks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        devoxx:columns="2">
        <view
            class="net.peterkuterna.android.apps.devoxxsched.ui.widget.TimeRulerView"
            android:id="@id/blocks_ruler"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            devoxx:headerWidth="46dip"
            devoxx:hourHeight="65dip"
            devoxx:horizontalDivider="true"
            devoxx:labelTextSize="13sp"
            devoxx:labelPaddingLeft="5dip"
            devoxx:labelColor="#000000"
            devoxx:dividerColor="#d9d9d9"
            devoxx:startHour="7"
            devoxx:endHour="23" />
        <View
            android:id="@id/blocks_now"
            android:background="@drawable/now_bar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </view>
</ScrollView>
